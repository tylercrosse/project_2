  <% if @item.taggings.length >0 %>
    Tags
  <% end %>
  <% @item.taggings.each do |tagging| %>
    <span class="tag">
      <%= link_to tagging.tag.name.downcase, tag_path(tagging.tag), :class =>"showtag" %><%= link_to 'x', [tagging.item, tagging],
      method: :delete, :title => "Delete Tag", :class => "deletetag"%>
  <% end %>
